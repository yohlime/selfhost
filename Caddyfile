(custom_tls) {
  tls {
    dns cloudflare {$CF_API_TOKEN}
    resolvers 1.1.1.1
  }
}

(default) {
  log {
    level INFO
    output file {$LOG_FILE} {
      roll_size 10MB
      roll_keep 10
    }
  }

  encode zstd gzip
}

{$DOMAIN} {
    reverse_proxy homer:8080

    import default
    import custom_tls 
}

pihole.{$DOMAIN} {
  reverse_proxy pihole:80

  import default
  import custom_tls
}

sync.{$DOMAIN} {
  reverse_proxy syncthing:8384 {
    header_up Host {upstream_hostport}
  }

  import default
  import custom_tls 
}

photoprism.{$DOMAIN} {
  reverse_proxy photoprism:2342

  import default
  import custom_tls
}

photos.{$DOMAIN} {
  reverse_proxy immich-server:2283 {
    header_up Host {host}
    header_up X-Real-IP {remote}
    header_up X-Forwarded-For {remote}
    header_up X-Forwarded-Proto {scheme}
  }

  import default
  import custom_tls
}


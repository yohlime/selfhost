}

webdav.{$DOMAIN} {
  basicauth * {
    yoh268 $2y$05$aGDdyUrV6sZK2jJXYYMbq.2A2OctRr0KwOfTt2B8jsvBIbn57/UaG
  }

  root * /webdav
  
  @get method GET
  route {
    file_server @get {
      hide .git .gitignore .stfolder .stversions
      browse
    }

    webdav
  }

  import default
  import custom_tls
}
